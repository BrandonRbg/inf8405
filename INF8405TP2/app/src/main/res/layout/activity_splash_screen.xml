<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        tools:context=".SplashScreenActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/vim" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@id/vimAppLabel"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:text="VIM App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/vimAppLabel"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" app:layout_constraintBottom_toTopOf="@id/developersLabel"
            android:textSize="60sp"/>

    <TextView
            android:text="Par Brandon Roberge et Simon Lacasse"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/developersLabel"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vimAppLabel" app:layout_constraintBottom_toTopOf="@id/versionLabel"
            android:textSize="30sp"/>

    <TextView
            android:text="Version 78.32.12.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/versionLabel"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/developersLabel" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>